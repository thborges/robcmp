mkdir -p toolchain-robcmp
cd toolchain-robcmp && make
cd ..
cd ../lib && make
cd ..
mkdir -p ~/.platformio/platforms
mkdir -p ~/.platformio/packages
ln -sf `realpath lib` platformio/toolchain-robcmp/stdlib
ln -sf `realpath platformio/platform` ~/.platformio/platforms/robcmp
ln -sf `realpath platformio/toolchain-robcmp` ~/.platformio/packages/toolchain-robcmp
code --install-extension platformio/vscode-syntax/robcmpsyntax-0.0.1.vsix
echo "Open the examples folder and try to build and upload!"
